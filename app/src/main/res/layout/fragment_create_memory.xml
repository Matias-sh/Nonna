<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.memories.CreateMemoryFragment">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Nonna.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Crear Nuevo Recuerdo"
            app:subtitle="Preserva un momento especial"
            app:subtitleTextAppearance="@style/TextAppearance.Nonna.Body2"
            app:titleTextAppearance="@style/TextAppearance.Nonna.Headline2" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Paso 1: Foto -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPhoto"
                style="@style/Widget.Nonna.Card.Memory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:contentPadding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            app:cardBackgroundColor="@color/primary_warm_light"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="1"
                                android:textAppearance="@style/TextAppearance.Nonna.Headline3"
                                android:textColor="@color/primary_warm_dark" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Selecciona una foto"
                                android:textAppearance="@style/TextAppearance.Nonna.CardTitle" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Elige una imagen que capture este momento especial"
                                android:textAppearance="@style/TextAppearance.Nonna.MetaInfo" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Preview de imagen -->
                    <ImageView
                        android:id="@+id/imageViewPhotoPreview"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/surface_light"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_foreground"
                        android:visibility="gone" />

                    <!-- Botones de foto -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonTakePhoto"
                            style="@style/Widget.Nonna.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:text="Tomar Foto"
                            app:icon="@drawable/ic_camera" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonChoosePhoto"
                            style="@style/Widget.Nonna.Button.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="Elegir de Galería"
                            app:icon="@drawable/ic_photo_library" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Paso 2: Audio -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Narración (Opcional)"
                        android:textAppearance="@style/TextAppearance.Nonna.Subtitle1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Graba una narración para acompañar tu recuerdo"
                        android:textAppearance="@style/TextAppearance.Nonna.Body2" />

                    <!-- Controles de grabación -->
                    <LinearLayout
                        android:id="@+id/layoutRecordingControls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonRecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grabar"
                            app:icon="@drawable/ic_launcher_foreground" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonStop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Detener"
                            android:visibility="gone"
                            app:icon="@drawable/ic_launcher_foreground"
                            style="@style/Widget.Nonna.Button.Outlined" />

                    </LinearLayout>

                    <!-- Waveform -->
                    <View
                        android:id="@+id/viewWaveform"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/surface_light"
                        android:visibility="gone" />

                    <!-- Duración -->
                    <TextView
                        android:id="@+id/textViewDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="00:00"
                        android:textAppearance="@style/TextAppearance.Nonna.Body2"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Paso 3: Metadatos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMetadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Información"
                        android:textAppearance="@style/TextAppearance.Nonna.Subtitle1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Completa los detalles de tu recuerdo"
                        android:textAppearance="@style/TextAppearance.Nonna.Body2" />

                    <!-- Título -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutTitle"
                        style="@style/Widget.Nonna.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="Título del recuerdo">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Fecha -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutDate"
                        style="@style/Widget.Nonna.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Fecha del recuerdo"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calendar">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tags -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutTags"
                        style="@style/Widget.Nonna.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Etiquetas (separadas por comas)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextTags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botón de guardar elegante -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                style="@style/Widget.Nonna.Button.Hero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="Preservar este recuerdo"
                app:icon="@drawable/ic_save" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


