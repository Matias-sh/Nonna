<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.memories.MemoryDetailFragment">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_primary"
            app:navigationIcon="@drawable/ic_launcher_foreground"
            app:title="Recuerdo"
            app:titleTextAppearance="@style/TextAppearance.Nonna.Headline3"
            app:titleTextColor="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen del recuerdo -->
            <ImageView
                android:id="@+id/imageViewMemory"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                tools:src="@drawable/ic_launcher_foreground" />

            <!-- Controles de audio -->
            <LinearLayout
                android:id="@+id/layoutAudioControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface_light"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Narración"
                    android:textAppearance="@style/TextAppearance.Nonna.Subtitle1" />

                <!-- Waveform -->
                <View
                    android:id="@+id/viewWaveform"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/background_card" />

                <!-- Controles de reproducción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPlay"
                        style="@style/Widget.Nonna.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reproducir"
                        app:icon="@drawable/ic_play_arrow" />

                    <TextView
                        android:id="@+id/textViewDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="00:00 / 02:30"
                        android:textAppearance="@style/TextAppearance.Nonna.Body2" />

                </LinearLayout>

                <!-- SeekBar -->
                <SeekBar
                    android:id="@+id/seekBarAudio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Información del recuerdo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Nonna.Headline2"
                    android:text="Título del recuerdo"
                    tools:text="Recuerdo de la abuela en la cocina" />

                <!-- Fecha -->
                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.Nonna.MemoryDate"
                    android:text="15 de septiembre, 2024"
                    tools:text="15 de septiembre, 2024" />

                <!-- Ubicación -->
                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/TextAppearance.Nonna.Body2"
                    android:visibility="gone"
                    tools:text="Casa de la abuela, Buenos Aires"
                    tools:visibility="visible" />

                <!-- Tags -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="familia"
                        app:chipBackgroundColor="@color/surface_light"
                        app:chipStrokeColor="@color/border_medium"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cocina"
                        app:chipBackgroundColor="@color/surface_light"
                        app:chipStrokeColor="@color/border_medium"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="recetas"
                        app:chipBackgroundColor="@color/surface_light"
                        app:chipStrokeColor="@color/border_medium"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Personas -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Personas en este recuerdo"
                    android:textAppearance="@style/TextAppearance.Nonna.Subtitle1" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abuela María"
                        app:chipBackgroundColor="@color/surface_light"
                        app:chipStrokeColor="@color/primary_warm"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mamá"
                        app:chipBackgroundColor="@color/surface_light"
                        app:chipStrokeColor="@color/primary_warm"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Transcripción (si existe) -->
                <TextView
                    android:id="@+id/textViewTranscript"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextAppearance.Nonna.Body1"
                    android:visibility="gone"
                    tools:text="Esta es la transcripción del audio grabado..."
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


