<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Nonna.Card.Memory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:contentPadding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Texto de la frase -->
        <TextView
            android:id="@+id/textViewPhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="¡Ay, mi vida!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Nonna.PhraseText"
            tools:text="¡Ay, mi vida!" />

        <!-- Información adicional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Persona que dijo la frase -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_person"
                    android:tint="@color/primary_warm" />

                <TextView
                    android:id="@+id/textViewPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abuela María"
                    android:textAppearance="@style/TextAppearance.Nonna.MetaInfo"
                    tools:text="Abuela María" />

            </LinearLayout>

            <!-- Indicador de audio -->
            <ImageView
                android:id="@+id/imageViewAudioIndicator"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Tiene audio"
                android:src="@drawable/ic_audio_wave"
                android:tint="@color/accent_terracotta"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Botón de reproducción -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPlay"
            style="@style/Widget.Nonna.Button.Gentle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Escuchar frase"
            app:icon="@drawable/ic_play_arrow" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


