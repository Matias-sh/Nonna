<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/border_light"
    app:strokeWidth="1dp"
    app:contentPadding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Texto de la frase -->
        <TextView
            android:id="@+id/textViewPhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Nonna.PhraseText"
            android:text="&quot;¡Ay, mi vida!&quot;"
            android:textAlignment="center"
            tools:text="&quot;¡Ay, mi vida!&quot;" />

        <!-- Información adicional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Persona que dijo la frase -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:tint="@color/primary_warm" />

                <TextView
                    android:id="@+id/textViewPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Nonna.Caption"
                    android:text="Abuela María"
                    tools:text="Abuela María" />

            </LinearLayout>

            <!-- Indicador de audio -->
            <ImageView
                android:id="@+id/imageViewAudioIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="@color/primary_warm"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Botón de reproducción -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Reproducir"
            app:icon="@drawable/ic_launcher_foreground"
            style="@style/Widget.Nonna.Button.Outlined" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>





