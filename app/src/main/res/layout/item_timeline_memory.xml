<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Línea de tiempo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Punto de la línea de tiempo -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/timeline_dot"
            android:layout_marginBottom="4dp" />

        <!-- Línea vertical -->
        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/primary_warm"
            android:alpha="0.3" />

    </LinearLayout>

    <!-- Contenido del recuerdo -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/background_card"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/border_light"
        app:strokeWidth="1dp"
        app:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Imagen del recuerdo -->
            <ImageView
                android:id="@+id/imageViewMemory"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                tools:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Indicador de audio -->
            <ImageView
                android:id="@+id/imageViewAudioIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/imageViewMemory"
                app:layout_constraintEnd_toEndOf="@id/imageViewMemory"
                tools:visibility="visible" />

            <!-- Contenido -->
            <LinearLayout
                android:id="@+id/layoutContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageViewMemory"
                app:layout_constraintTop_toTopOf="@id/imageViewMemory">

                <!-- Título -->
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAppearance="@style/TextAppearance.Nonna.MemoryTitle"
                    android:text="Título del recuerdo"
                    tools:text="Recuerdo de la abuela en la cocina" />

                <!-- Fecha -->
                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/TextAppearance.Nonna.MemoryDate"
                    android:text="15 de septiembre, 2024"
                    tools:text="15 de septiembre, 2024" />

                <!-- Tags -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:chipSpacingHorizontal="4dp"
                    app:chipSpacingVertical="2dp"
                    app:singleLine="true"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="familia"
                        app:chipBackgroundColor="@color/surface_light"
                        app:chipStrokeColor="@color/border_medium"
                        app:chipStrokeWidth="1dp"
                        app:chipTextSize="10sp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cocina"
                        app:chipBackgroundColor="@color/surface_light"
                        app:chipStrokeColor="@color/border_medium"
                        app:chipStrokeWidth="1dp"
                        app:chipTextSize="10sp" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>


