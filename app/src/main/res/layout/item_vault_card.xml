<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/border_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono del baúl -->
        <ImageView
            android:id="@+id/iv_vault_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/type_indicator_background"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <!-- Información del baúl -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vault_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Baúl"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_vault_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 miembros"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_vault_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creado: 15/01/2024"
                android:textSize="12sp"
                android:textColor="@color/text_hint" />

        </LinearLayout>

        <!-- Botón de configuración -->
        <ImageButton
            android:id="@+id/btn_vault_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Configuración del baúl"
            app:tint="@color/text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
