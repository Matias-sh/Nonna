<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme para Nonna -->
    <style name="Base.Theme.Nonna" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios - Actualizados -->
        <item name="colorPrimary">@color/primary_warm</item>
        <item name="colorPrimaryVariant">@color/primary_warm_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_warm_light</item>
        <item name="colorOnPrimaryContainer">@color/primary_warm_dark</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary_gold</item>
        <item name="colorSecondaryVariant">@color/secondary_amber</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Colores de superficie -->
        <item name="colorSurface">@color/surface_warm</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Colores de error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Colores de acento -->
        <item name="colorTertiary">@color/accent_terracotta</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <!-- Colores de outline -->
        <item name="colorOutline">@color/border_medium</item>
        <item name="colorOutlineVariant">@color/border_light</item>
        
        <!-- Colores de superficie adicionales -->
        <item name="colorPrimaryContainer">@color/primary_warm_light</item>
        <item name="colorOnPrimaryContainer">@color/primary_warm_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_sepia</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>
        
        <!-- Colores adicionales disponibles -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Estilos de texto est치ndar -->
        <item name="android:textAppearance">@style/TextAppearance.Nonna.Body1</item>
        
        <!-- Estilos de componentes -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Estilos de botones -->
        <item name="materialButtonStyle">@style/Widget.Nonna.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Nonna.Button.Outlined</item>
        
        <!-- Estilos de tarjetas -->
        <item name="materialCardViewStyle">@style/Widget.Nonna.Card</item>
        
        <!-- Estilos de chips -->
        <item name="chipStyle">@style/Widget.Nonna.Chip</item>
        
        <!-- Estilos de FAB -->
        <item name="floatingActionButtonStyle">@style/Widget.Nonna.FAB</item>
    </style>

    <style name="Theme.Nonna" parent="Base.Theme.Nonna" />
    
    <!-- Estilos de componentes personalizados -->
    <style name="Widget.Nonna.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.Nonna.Button</item>
        <item name="backgroundTint">@color/primary_warm</item>
        <item name="android:minHeight">52dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!-- Bot칩n hero para acciones principales -->
    <style name="Widget.Nonna.Button.Hero" parent="Widget.Nonna.Button">
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="backgroundTint">@color/accent_terracotta</item>
        <item name="android:paddingHorizontal">32dp</item>
    </style>

    <!-- Bot칩n sutil para acciones secundarias -->
    <style name="Widget.Nonna.Button.Gentle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Nonna.ButtonSecondary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="rippleColor">@color/primary_warm_light</item>
    </style>
    
    <style name="Widget.Nonna.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Nonna.ButtonSecondary</item>
        <item name="strokeColor">@color/primary_warm</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.Nonna.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Nonna.ButtonSecondary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="rippleColor">@color/primary_warm_light</item>
        <item name="android:textColor">@color/primary_warm</item>
    </style>
    
    
    <style name="Widget.Nonna.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Nueva variaci칩n de card para memorias especiales -->
    <style name="Widget.Nonna.Card.Memory" parent="Widget.Nonna.Card">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface_elevated</item>
        <item name="strokeColor">@color/primary_warm_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Card para estados especiales -->
    <style name="Widget.Nonna.Card.Highlight" parent="Widget.Nonna.Card">
        <item name="cardBackgroundColor">@color/secondary_sepia</item>
        <item name="cardElevation">12dp</item>
        <item name="strokeColor">@color/secondary_gold</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="Widget.Nonna.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface_light</item>
        <item name="chipStrokeColor">@color/primary_warm_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>

    <!-- Chip destacado -->
    <style name="Widget.Nonna.Chip.Selected" parent="Widget.Nonna.Chip">
        <item name="chipBackgroundColor">@color/primary_warm_light</item>
        <item name="chipStrokeColor">@color/primary_warm</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_warm_dark</item>
    </style>

    <!-- Chip para personas -->
    <style name="Widget.Nonna.Chip.Person" parent="Widget.Nonna.Chip">
        <item name="chipBackgroundColor">@color/accent_lavender</item>
        <item name="chipStrokeColor">@color/accent_warm_grey</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.Nonna.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_terracotta</item>
        <item name="tint">@color/white</item>
        <item name="elevation">12dp</item>
        <item name="maxImageSize">28dp</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- FAB extendido para textos -->
    <style name="Widget.Nonna.FAB.Extended" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_terracotta</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Nonna.Button</item>
        <item name="cornerRadius">28dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <!-- Estilos para Bottom Navigation -->
    <style name="Widget.Nonna.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_warm_light</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
    </style>

    <!-- Shape Appearance para FAB -->
    <style name="ShapeAppearance.Nonna.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Estilos adicionales para componentes especiales -->
    <style name="Widget.Nonna.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Nonna.Headline3</item>
        <item name="android:background">@color/background_primary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- AppBarLayout estilo Nonna -->
    <style name="Widget.Nonna.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@drawable/appbar_background</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- TextInputLayout refinado -->
    <style name="Widget.Nonna.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_warm</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/primary_warm</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

</resources>